<BorderPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainLayoutController">
    <left>
        <!-- Sidebar - Improved Styling -->
        <VBox fx:id="sidebar" alignment="TOP_CENTER" prefHeight="717.0" prefWidth="240.0" style="-fx-background-color: #2c3e50; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 0);" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="15.0" right="15.0" top="20.0" />
            </padding>
            <children>
                <!-- App Title / Logo Placeholder -->
                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <Circle fill="#28a745" radius="15.0" /> <!-- Simple circle icon placeholder -->
                        <Label text="Gara Manager" textFill="#ecf0f1">
                            <font>
                                <Font name="System Bold" size="22.0" />
                            </font>
                        </Label>
                    </children>
                    <VBox.margin>
                        <Insets bottom="30.0" top="10.0" />
                    </VBox.margin>
                </HBox>

                <!-- User Info Section -->
                <Label fx:id="lblLoggedInUser" alignment="CENTER" style="-fx-font-weight: bold; -fx-font-size: 16px;" text="Xin chào, [Tên người dùng]!" textFill="#ecf0f1" wrapText="true">
                    <VBox.margin>
                        <Insets bottom="30.0" />
                    </VBox.margin>
                </Label>

                <!-- Navigation Buttons - Enhanced Styling -->
                <Button fx:id="btnTiepNhan" mnemonicParsing="false" onAction="#handleTiepNhan" prefHeight="50.0" prefWidth="220.0" styleClass="sidebar-button" text="     Tiếp nhận xe">
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </Button>
                <Button fx:id="btnTrangThaiXuongXe" mnemonicParsing="false" onAction="#handleTrangThaiXuongXe" prefHeight="50.0" prefWidth="220.0" styleClass="sidebar-button" text="     Trạng thái Xưởng xe">
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </Button>
                <Button fx:id="btnSuaChua" mnemonicParsing="false" onAction="#handleSuaChua" prefHeight="50.0" prefWidth="220.0" styleClass="sidebar-button" text="     Sửa chữa">
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </Button>
                <Button fx:id="btnThuTien" mnemonicParsing="false" onAction="#handleThuTien" prefHeight="50.0" prefWidth="220.0" styleClass="sidebar-button" text="     Thu tiền">
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </Button>
                <Button fx:id="btnBaoCao" mnemonicParsing="false" onAction="#handleBaoCao" prefHeight="50.0" prefWidth="220.0" styleClass="sidebar-button" text="     Báo cáo">
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </Button>
                                <Button fx:id="btnQuanLyHieuXe" mnemonicParsing="false" onAction="#handleQuanLyHieuXe" prefHeight="50.0" prefWidth="220.0" styleClass="sidebar-button" text="     Quản lý Hiệu xe">
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </Button>
                <Button fx:id="btnQuanLyTienCong" mnemonicParsing="false" onAction="#handleQuanLyTienCong" prefHeight="50.0" prefWidth="220.0" styleClass="sidebar-button" text="     Quản lý Tiền công">
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </Button>
                <Button fx:id="btnQuanLyTho" mnemonicParsing="false" onAction="#handleQuanLyTho" prefHeight="50.0" prefWidth="220.0" styleClass="sidebar-button" text="     Quản lý Thợ">
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </Button>
                <Button fx:id="btnQuanLyNhaCungCap" mnemonicParsing="false" onAction="#handleQuanLyNhaCungCap" prefHeight="50.0" prefWidth="220.0" styleClass="sidebar-button" text="     Quản lý NCC">
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </Button>
                <Button fx:id="btnQuanLyVatTu" mnemonicParsing="false" onAction="#handleQuanLyVatTu" prefHeight="50.0" prefWidth="220.0" styleClass="sidebar-button" text="     Quản lý Vật tư">
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </Button>
                <Button fx:id="btnQuanLyTaiKhoan" mnemonicParsing="false" onAction="#handleQuanLyTaiKhoan" prefHeight="50.0" prefWidth="220.0" styleClass="sidebar-button" text="     Quản lý Tài khoản">
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </Button>
                <Button fx:id="btnQuanLyPhanQuyen" mnemonicParsing="false" onAction="#handleQuanLyPhanQuyen" prefHeight="50.0" prefWidth="220.0" styleClass="sidebar-button" text="     Quản lý Phân quyền">
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </Button>
                 <Button fx:id="btnCauHinh" mnemonicParsing="false" onAction="#handleCauHinh" prefHeight="50.0" prefWidth="220.0" styleClass="sidebar-button" text="     Cấu hình">
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </Button>
                <Region VBox.vgrow="ALWAYS" /> <!-- Spacer -->
                <Button fx:id="btnDangXuat" mnemonicParsing="false" onAction="#handleDangXuat" prefHeight="50.0" prefWidth="220.0" style="-fx-background-color: #e74c3c; -fx-text-fill: #ffffff; -fx-font-size: 15px; -fx-background-radius: 5; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 0);" text="   Đăng xuất">
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </Button>
            </children>
        </VBox>
    </left>
    <center>
        <!-- Content Area -->
        <AnchorPane fx:id="contentArea" prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: #f5f7f9;" BorderPane.alignment="CENTER" />
    </center>
    <stylesheets>
        <!-- Reference to external CSS file -->
        <URL value="@style.css" />
    </stylesheets>
</BorderPane>
